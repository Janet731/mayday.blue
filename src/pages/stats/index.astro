---
import Layout from '@/layouts/Layout.astro'
import { songStatList } from '@/content/_parse/setlist'
---

<Layout title="点歌统计">
  <div class="max-w-3xl mx-auto px-6 py-8">
    <!-- {JSON.stringify(songStatList)} -->
    {songStatList.map(item => (
      <a
        href={`/stats/${item.slug}`}
        class:list={[
          'flex items-center gap-2 h-12',
          'border-b border-base last:border-0',
        ]}
      >
        <p class="flex-1 text-sm">{item.title}</p>
        <span class="w-60px text-sm fg-lighter text-right">{item.amount}</span>
      </a>
    ))}
	</div>
  <div slot="footer-left" class="flex-1 flex items-center overflow-hidden">
    <div class="flex flex-col h-full justify-center">
      <span class="text-xs fg-lighter">点歌统计 - Demo</span>
    </div>
  </div>
  <div slot="footer-right" class="flex items-center gap-2">
    
  </div>
</Layout>
