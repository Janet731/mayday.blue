---
import { pwaInfo } from 'virtual:pwa-info'
import '@unocss/reset/tailwind-compat.css'
// import '@fontsource/newsreader'
// import '@fontsource/newsreader/400-italic.css'
import Footer from '@/components/Footer.astro'

export interface Props {
	title?: string
}

const { title } = Astro.props

const pageTitle = title ? `${title} | Mayday.Lyrics` : 'Mayday.Lyrics'
---

<!DOCTYPE html>
<html lang="zh-CN">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" href="/favicon.ico">
		<link rel="apple-touch-icon" href="/apple-touch-icon.png" sizes="180x180">
		<link rel="mask-icon" href="/mask-icon.svg" color="#0f0f0f">
		<meta name="theme-color" content="#0f0f0f">
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<meta name="description" content="收录五月天的歌曲歌词">
    { pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} /> }
		<script src="/src/pwa.ts"></script>
	</head>
	<body class="bg-base fg-base">
		<main class="h-screen w-screen pb-14 overflow-auto">
			<slot />
		</main>
		<Footer>
			<slot name="footer-left" slot="footer-left">
				<a href="/" class="p-2 -ml-2 hv-base">
					<h1 class="text-sm">Mayday.Lyrics</h1>
				</a>
			</slot>
			<slot name="footer-right" slot="footer-right" />
		</Footer>
	</body>
</html>
